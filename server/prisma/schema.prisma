// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Persona {
  id      Int      @id @default(autoincrement())
  nombre  String
  celular Int
  turnos  Turnos[]
}

model Turnos {
  id       Int       @id
  idTurno  Persona   @relation(fields: [turnosId], references: [id])
  turnosId Int
  cancha   Int
  dia      Dia[]
  horario  Horario[]
}

model Dia {
  id       Int    @id
  idTurno  Int
  dia      Int
  turnos   Turnos @relation(fields: [turnosId], references: [id])
  diaId    Int
  turnosId Int
}

model Horario {
  id        Int     @id
  hora      Int
  horarioId Int
  Turnos    Turnos @relation(fields: [turnosId], references: [id])
  turnosId  Int
}



model Cancha {
  id Int @id @default(autoincrement())
  nombreCancha String
  
}