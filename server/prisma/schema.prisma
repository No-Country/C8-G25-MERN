model Turnos {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  id_cancha Int
  fecha Fecha @relation( fields: [idFecha], references: [id])
  idFecha Int
}


model Fecha {
  id Int @id @default(autoincrement())
  dia Int
  mes Int
  anio Int
  hora Int
  cancha Int
  turnos Turnos[]
}



