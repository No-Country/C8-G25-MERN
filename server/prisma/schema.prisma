model Cancha {
  id     Int      @id
  turnos Turno[]
  name String
}

model Turno {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  dia   Dia[]

  //
  id_cancha Int
  play Cancha @relation(fields: [id_cancha], references: [id])
}

model Dia {
  turnos   Turno @relation(fields: [authorId], references: [id])
  authorId Int // relation scalar field  (used in the `@relation` attribute above) 
  id       Int    @id @default(autoincrement())
}

model Horario {
  id Int @id @default(autoincrement())
}
